<div class="container">
  <div class="row">
    <div class="col-md-4 mx-auto" >
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>  
      <div class="mb-3">

        <%= f.label :email, class: 'form-label',autofocus: true, autocomplete: "email" do %>
          <%= 'Email' %><span style="color: red;"> *</span>
        <% end %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
      <% resource.errors.full_messages_for(:email).each do |message| %>
         <p><%= message %></p>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :first_name, class: 'form-label', autocomplete: "email" %>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :last_name, class: 'form-label', autocomplete: "email" %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
        </div>
      </div>

        <div class="mb-3">
        <%= f.label :phone, class: 'form-label', autocomplete: "email" do %>
          <%= 'Phone' %><span style="color: red;"> *</span>
        <% end %>
        <% resource.errors.full_messages_for(:phone).each do |message| %>
         <p><%= message %></p>
        <% end %>
        <%= f.text_field :phone, class: 'form-control' %>
      </div>


      <div class="mb-3">
        <%= f.label :gender, class: 'form-label' %>
        <%= f.select :gender, ['Male', 'Female', 'Other'], { prompt: 'Select gender' }, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: 'form-label' do %>
          <%= 'Password' %><span style="color: red;"> *</span>
        <% end %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <% resource.errors.full_messages_for(:password).each do |message| %>
         <p><%= message %></p>
      <% end %>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: 'form-label' do %>
          <%= 'Password confirmation' %><span style="color: red;"> *</span>
        <% end %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
         <p><%= message %></p>
      <% end %>

      <div class="mb-3 mx-auto">
        <%= recaptcha_tags %>
      </div>
      <% resource.errors.full_messages_for(:reCaptcha).each do |message| %>
         <p><%= message %></p>
      <% end %>
        
      <%= f.submit 'Register',data: { turbo: false } , class: 'btn btn-primary' %>
      <button class="btn btn-primary" >
        <%= link_to "Sign in", root_path %>
      </button>
    <% end %>
    </div>
  </div>
</div>