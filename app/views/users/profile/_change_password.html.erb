<ul class="nav nav-tabs">
  <li class="nav-item"><a href="" class="active nav-link">Change password</a></li>
</ul>
<div class="row">
  <div class="col-12 col-sm-12 mb-3">
    <%= form_with(model: resource, url: registration_path(resource_name), method: :put) do |f| %>
      <div class="row mt-3">
        <div class="form-group">
          <%= f.label :new_password, class: 'form-label', for: 'password_input' %>
          <%= f.password_field :password, class: 'form-control', id: 'password_input', placeholder: "********", autocomplete: "new-password" %>
        </div>
        <% resource.errors.full_messages_for(:password).each do |message| %>
          <p class='error_message'><%= message %></p>
        <% end %>
      </div>
      <div class="row">
        <div class="form-group">
          <div class="col-md-12">
            <%= f.label :password_confirmation, class: 'form-label', autocomplete: "password_confirmation " %>
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "********" %>
          </div>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col d-flex justify-content-end">
          <%= f.submit 'Save Changes', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>