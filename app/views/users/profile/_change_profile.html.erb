<div class="tab-content pt-3">
  <div class="tab-pane active">
    <%= form_with(model: resource, url: registration_path(resource_name), method: :put, local: true) do |f| %>
      <div class="row">
        <div class="col">
          <div class="row">
            <div class="col">
              <div class="form-group">
                <div class="col-md-12">
                  <div class="mb-3">
                    <%= f.label :first_name, class: 'form-label' %>
                    <%= f.text_field :first_name, class: 'form-control', autocomplete: "first_name" %>
                  </div>
                  <% resource.errors.full_messages_for(:first_name).each do |message| %>
                    <p class='error_message'><%= message %></p>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="form-group">
                <div class="col-md-12">
                  <div class="mb-3">
                    <%= f.label :last_name, class: 'form-label' %>
                    <%= f.text_field :last_name, class: 'form-control', autocomplete: "last_name" %>
                  </div>
                  <% resource.errors.full_messages_for(:last_name).each do |message| %>
                    <p class='error_message'><%= message %></p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class="form-group">
                <div class="col-md-12">
                  <div class="mb-3">
                    <%= f.label :phone, class: 'form-label' %>
                    <%= f.text_field :phone, class: 'form-control', autocomplete: "phone" %>
                  </div>
                  <% resource.errors.full_messages_for(:phone).each do |message| %>
                    <p class='error_message'><%= message %></p>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="col">
              <div class="form-group">
                <div class="col-md-12">
                  <div class="mb-3">
                    <%= f.label :gender, class: 'form-label' %>
                    <%= f.select :gender, User.genders.keys.map { |key| [t("activerecord.attributes.user.genders.#{key}"), key] }, { prompt: t('activerecord.attributes.user.select_gender') }, class: 'form-control' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col mb-3">
              <div class="form-group">
                <%= f.label :address, class: 'form-label' %>
                <%= f.text_area :address, class: 'form-control', size: '70x5', autocomplete: "address" %>
              </div>
              <% resource.errors.full_messages_for(:address).each do |message| %>
                    <p class='error_message'><%= message %></p>
                  <% end %>
            </div>
          </div>
          <div>
            <%= f.label :avatar, class: 'form-label' %>
            <%= f.file_field :avatar, class: 'form-control' %>
          </div>
          <%= image_tag(resource.image_as_thumbnail) %>
        </div>
      </div>
      <div class="row">
        <div class="col d-flex justify-content-end">
          <%= f.submit 'Save Changes', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>