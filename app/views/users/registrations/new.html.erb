<div class="container">
  <div class="row mt-5">
    <div class="col-md-4 mx-auto" >
    <h2 class='text-center mt-5'><%= t('global.signup') %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>  
        <div class="mb-3">

          <%= f.label :email, class: 'form-label',autofocus: true, autocomplete: "email" do %>
            <%= 'Email' %><span style="color: red;"> *</span>
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
        <% resource.errors.full_messages_for(:email).each do |message| %>
          <p class='error_message'><%= message %></p>
        <% end %>

        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :first_name, class: 'form-label', autocomplete: "first_name" %>
              <%= f.text_field :first_name, class: 'form-control' %>
            </div>
            <% resource.errors.full_messages_for(:first_name).each do |message| %>
              <p class='error_message'><%= message %></p>
            <% end %>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <%= f.label :last_name, class: 'form-label', autocomplete: "last_name" %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </div>
            <% resource.errors.full_messages_for(:last_name).each do |message| %>
              <p class='error_message'><%= message %></p>
            <% end %>
          </div>
        </div>

          <div class="mb-3">
          <%= f.label :phone, class: 'form-label', autocomplete: "phone" %>
          <%= f.text_field :phone, class: 'form-control' %>
          <% resource.errors.full_messages_for(:phone).each do |message| %>
          <p class='error_message'><%= message %></p>
          <% end %>
        </div>


        <div class="mb-3">
          <%= f.label :gender, class: 'form-label' %>
          <%= f.select :gender, User.genders.keys.map { |key| [t("activerecord.attributes.user.genders.#{key}"), key] }, { prompt: t('activerecord.attributes.user.select_gender') }, class: 'form-control' %>
        </div>
        <%
=begin%>
 <div class="mb-3">
          <%= f.label :address, class: 'form-label', autocomplete: "address" %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <% resource.errors.full_messages_for(:address).each do |message| %>
          <p class='error_message'><%= message %></p>
        <% end %> 
<%
=end%>

        <div class="mb-3">
          <%= f.label :password, class: 'form-label' do %>
            <%= t('activerecord.attributes.user.password') %><span style="color: red;"> *</span>
          <% end %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <% resource.errors.full_messages_for(:password).each do |message| %>
          <p class='error_message'><%= message %></p>
        <% end %>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: 'form-label' do %>
            <%= t('activerecord.attributes.user.password_confirmation') %><span style="color: red;"> *</span>
          <% end %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
          <p class='error_message'><%= message %></p>
        <% end %>

        <div class="mb-3 mx-auto d-flex justify-content-center">
          <%= recaptcha_tags %>
        </div>
        <% resource.errors.full_messages_for(:reCaptcha).each do |message| %>
          <p class='error_message mb-3 d-flex justify-content-center'><%= message %></p>
        <% end %>
        
        <div class="mb-3 d-flex justify-content-center">
          <%= f.submit 'Register', data: { turbo: false }, class: 'btn btn-primary col-12' %>
        </div>
      <% end %>
        <p class='text-center'> <%= t('static_pages.signup.have_an_account') %>  <%= link_to t('global.signin'), new_user_session_path, class: 'link_signin' %></p>  
    </div>
  </div>
</div>

<%= javascript_include_tag "Signin_user.js" %>
    